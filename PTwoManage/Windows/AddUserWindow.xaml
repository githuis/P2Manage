<Window x:Class="PTwoManage.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="Manage Users" Height="460" Width="603" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="251*" />
            <RowDefinition Height="180*" />
        </Grid.RowDefinitions>
        <!--<TabControl BorderThickness="1">
            <TabItem Header="Add User">
                <StackPanel>
                    <Label>Username:</Label>
                    <TextBox x:Name="UserName_TextBox" BorderBrush="Black" Height="20" Width="100"></TextBox>
                    <Label>Password:</Label>
                    <PasswordBox x:Name="Password_TextBox" BorderBrush="Black" Height="20" Width="100"></PasswordBox>
                    <Button Height="20" Width="50" Margin="10" Click="Submit_AddUser_Click">Submit</Button>
                    
                </StackPanel>
            </TabItem>
            <TabItem Header="Edit User">-->
        <Grid Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="29.667" />
                <RowDefinition Height="36" />
                <RowDefinition Height="174" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="203*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1">Username:</Label>
            <TextBox Name="EditUser_UserNameBox" Grid.Row="0" Grid.Column="1" Margin="3" Grid.ColumnSpan="1"
                     IsEnabled="False" />
            <Label Grid.Row="1" Grid.Column="0">Name:</Label>
            <TextBox Name="EditUser_FullName" Grid.Row="1" Grid.Column="1" Margin="3" />
            <Label Grid.Row="2" Grid.Column="0">Password:</Label>
            <PasswordBox Name="EditUser_Password" Grid.Row="2" Grid.Column="1" Margin="3" />

            <Label Grid.Row="3" Grid.Column="0" Grid.RowSpan="1">Confirm:</Label>
            <PasswordBox Name="EditUser_ConfirmPassword" Grid.Row="3" Grid.Column="1" Margin="3" />
            <Label Grid.Row="4" Grid.Column="0">CPR:</Label>
            <TextBox Name="EditUser_CPR" Grid.Row="4" Grid.Column="1" Margin="3"
                     PreviewTextInput="EditUser_NumberValidation" MaxLength="10" />
            <Label Grid.Row="5" Grid.Column="0">Phone number:</Label>
            <TextBox Name="EditUser_Number" Grid.Row="5" Grid.Column="1" Margin="3"
                     PreviewTextInput="EditUser_NumberValidation" MaxLength="12" />
            <Label Grid.Row="6" Grid.Column="0">E-Mail:</Label>
            <TextBox Name="EditUser_Email" Grid.Row="6" Grid.Column="1" Margin="3" />
            <Button Grid.Row="8" Grid.Column="1" Height="20" Margin="15,0,0,16" HorizontalAlignment="Left" Width="76"
                    VerticalAlignment="Bottom" Click="SaveUser_Click">
                Save User
            </Button>
            <Button Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Width="72" Margin="105,0,0,16" Height="20"
                    VerticalAlignment="Bottom" Click="EditUser_Select_Button_Click">
                Load User
            </Button>
            <Button Grid.Row="8" Grid.Column="1" Height="20" Width="75" Margin="192,0,0,16" HorizontalAlignment="Left"
                    VerticalAlignment="Bottom" Click="Remove_User_Click">
                Remove User
            </Button>
            <Label Name="AddUser_Confirmation" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="1" Width="326" />
            <ListBox Name="EditUser_NameList" Grid.Row="0" Grid.Column="2" Grid.RowSpan="10" Width="180"
                     SelectionMode="Single" Height="421" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <wpfTool:CheckListBox Name="Tag_ListBox" Grid.Column="1" Grid.Row="9" Margin="15" />
        </Grid>
        <!--<DockPanel Name="Edit_UserPanel">
                    <Button Name="EditUser_Select_Button" Click="EditUser_Select_Button_Click">Load User</Button>
                    <ScrollViewer DockPanel.Dock="Bottom" VerticalAlignment="Stretch" Margin="272,0,0,0">
                        <ListBox Name="EditUser_NameList" SelectionMode="Single" VerticalAlignment="Top" SelectedItem="{Binding SelectedItem}" >
                        </ListBox>
                    </ScrollViewer>

                </DockPanel>
            </TabItem>
        </TabControl>-->

    </Grid>
</Window>