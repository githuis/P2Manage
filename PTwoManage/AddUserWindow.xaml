        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="203*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1">Username:</Label>
            <TextBox Name="EditUser_UserNameBox" Grid.Row="0" Grid.Column="1" Margin="3" Grid.ColumnSpan="1"></TextBox>
            <Button Click="EditUser_Select_Button_Click" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Width="72" Margin="105,0,0,190" Height="20" VerticalAlignment="Bottom">Load User</Button>
            <Label Grid.Row="1" Grid.Column="0">Password:</Label>
            <PasswordBox Name="Password_TextBox" Grid.Row="1" Grid.Column="1" Margin="3"/>
            <Label Grid.Row="2" Grid.Column="0">Confirm:</Label>
            <PasswordBox Name="ConfirmPassword" Grid.Row="2" Grid.Column="1" Margin="3"></PasswordBox>
            <ListBox Name="EditUser_NameList" Grid.Row="0" Grid.Column="2" Grid.RowSpan="8" Width="180" SelectionMode="Single" Height="421" SelectionChanged="EditUser_NameList_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>

            <Label Grid.Row="3" Grid.Column="0" Grid.RowSpan="1">Name:</Label>
            <TextBox Name="EditUser_FullName" Grid.Row="3" Grid.Column="1" Margin="3"></TextBox>
            <Label Grid.Row="4" Grid.Column="0">CPR:</Label>
            <TextBox Name="EditUser_CPR" Grid.Row="4" Grid.Column="1" Margin="3" PreviewTextInput="EditUser_NumberValidation" ></TextBox>
            <Label Grid.Row="5" Grid.Column="0">Phone number:</Label>
            <TextBox Name="EditUser_Number" Grid.Row="5" Grid.Column="1" Margin="3" PreviewTextInput="EditUser_NumberValidation" MaxLength="12"></TextBox>
            <Label Grid.Row="6" Grid.Column="0">E-Mail:</Label>
            <TextBox Name="EditUser_Email" Grid.Row="6" Grid.Column="1" Margin="3"></TextBox>
            <Button Grid.Row="7" Grid.Column="1" Height="20" Margin="15,30,0,0" HorizontalContentAlignment="Center" Click="SaveUser_Click" HorizontalAlignment="Left" Width="76" VerticalAlignment="Top">Save User</Button>
            <Button Grid.Row="7" Grid.Column="1" Height="20" Width="75" Margin="192,0,0,190" HorizontalAlignment="Left" VerticalAlignment="Bottom">Remove User</Button>
            <Label Name="AddUser_Confirmation" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="1"></Label>
        </Grid>
        <!--<DockPanel Name="Edit_UserPanel">
                    <Button Name="EditUser_Select_Button" Click="EditUser_Select_Button_Click">Load User</Button>
