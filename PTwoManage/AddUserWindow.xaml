<Window x:Class="PTwoManage.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddUserWindow" Height="200" Width="100">
    <Grid>
        <StackPanel>
            <Label>Username:</Label>
            <TextBox x:Name="UserName_TextBox" BorderBrush="Black" Height="20" Width="75"></TextBox>
            <Label>Password:</Label>
            <TextBox x:Name="Password_TextBox" BorderBrush="Black" Height="20" Width="75"></TextBox>
            <Button Height="20" Width="50" Margin="10" Click="Submit_AddUser_Click">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
