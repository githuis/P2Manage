<Window x:Class="PTwoManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="P2Manage" Height="350" Width="525"  WindowState="Maximized"  
        >
    <DockPanel>
        <StackPanel Name="loginPanel" Margin="20" IsEnabled="True" Visibility="Visible" HorizontalAlignment="Right">
            <TextBlock Text="Company Name"/>
            <TextBox Name="loginUsernameBox"/>
            <TextBlock Text="Company Password"/>
            <PasswordBox Name="loginPasswordBox"/>
            <Button Name="loginSubmit" Height="30" Width="100" Content="Log in" Margin="0,10,0,0" Click="loginSubmit_Click"/>
            <TextBlock Text="" Name="loginFeedbackText"/>
            
        </StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"></MenuItem>
            </MenuItem>
            <MenuItem Header="_User" Click="AddUser_Click"></MenuItem>
            <MenuItem Header="_Schedule" Click="MenuItem_Click_1">
                <MenuItem Header="_Add Shift Template" Click="AddTemplate_Click"></MenuItem>
                <MenuItem Header="_Load Schedule" Click="LoadSchedule_Click"></MenuItem>
                <MenuItem Header="_Free request" Click="UserFreeRequest_Click"></MenuItem>
                <MenuItem Header="_Make a holiday" Click="MakeHoliday_Click"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel>
            <!-- Week display -->
